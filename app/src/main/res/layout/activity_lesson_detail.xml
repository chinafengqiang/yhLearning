<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/lessonNumber"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_weight="8.91"
        android:background="#888800"
        android:gravity="center"
        android:text="id"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:ignore="HardcodedText,InefficientWeight" />

    <TableLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.79"
        >

        <TableRow
            android:id="@+id/lessonRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/padding_10_normal"
            >

            <TextView
                android:id="@+id/lessonName"
                android:layout_width="100dp"
                android:layout_height="52dp"
                android:text="数学"
                android:textSize="30sp"
                android:singleLine="true"
                android:textColor="@color/highblue"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/lessonTime"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="08:20-09:00"
                android:textSize="15sp"
                android:singleLine="true"
                android:textColor="@color/lessblue"
                tools:ignore="HardcodedText" />
        </TableRow>
        <!--<TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/lessonTime"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:text="if"
                android:textSize="20sp"
                android:singleLine="true"
                android:textColor="#004499"
                tools:ignore="HardcodedText" />
        </TableRow>-->

        <com.yh.view.tooltip.ToolTipRelativeLayout
            android:id="@+id/tooltipframelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </TableLayout>

</LinearLayout>